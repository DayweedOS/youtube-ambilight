{
  "name": "chrome-youtube-ambilight",
  "version": "1.0.0",
  "description": "This Chrome Extension adds ambilight to the videos you view on YouTube",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WesselKroos/chrome-youtube-ambilight.git"
  },
  "author": "Wessel Kroos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WesselKroos/chrome-youtube-ambilight/issues"
  },
  "homepage": "https://github.com/WesselKroos/chrome-youtube-ambilight#readme",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@sentry/browser": "^5.7.1",
    "copyfiles": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.26.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.22.6"
  },
  "scripts": {
    "build:manifest": "copyfiles -u 1 src/manifest.json dist",
    "build:html": "copyfiles -u 1 src/options.html dist",
    "build:images": "copyfiles -u 2 src/images/* dist/images",
    "build:css:ambilight": "sass --no-source-map src/styles/youtube-ambilight.scss dist/styles/youtube-ambilight.css",
    "build:css:options": "copyfiles -u 2 src/styles/options.css dist/styles",
    "build:css": "run-p build:css:ambilight build:css:options",
    "build:scripts": "rollup -c",
    "build": "run-p build:manifest build:html build:images build:css build:scripts"
  }
}
