{
  "manifest_version": 2,
  "name": "YouTube Ambilight",
  "description": "Immersive yourself in YouTube videos with ambilight!",
  "version": "2.36.15",
  "author": "Wessel Kroos",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "minimum_chrome_version": "69",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "69.0"
    }
  },
  "browser_action": {
    "default_icon": "images/icon-19.png",
    "default_popup": "options.html"
  },
  "background" : {
    "scripts" : ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "exclude_matches": ["https://www.youtube.com/live_chat*"],
      "js": ["scripts/content.js"],
      "css": ["styles/youtube-ambilight.css"]
    },
    {
      "matches": ["https://www.youtube.com/live_chat*"],
      "css": [
        "styles/youtube-ambilight-iframe-live-chat.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "styles/options.css",
    "scripts/youtube-ambilight.js",
    "images/noise-1.png",
    "images/noise-2.png",
    "images/noise-3.png"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "permissions": [
    "https://www.youtube.com/*"
  ]
}