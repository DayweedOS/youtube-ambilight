{
  "manifest_version": 2,
  "name": "YouTube Ambilight",
  "description": "This Chrome Extension adds ambilight to YouTube videos",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://www.youtube.com/watch*"],
    "js": ["contentscript.js"],
    "css": ["styles/main.css"]
  }],
  "web_accessible_resources": [
    "styles/main.css",
    "scripts/generic.js",
    "scripts/youtube-ambilight.js"
  ],
  "permissions": ["activeTab"]
}